{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "jsx": "preserve",
    "lib": ["dom", "esnext"],
    "baseUrl": "./src",
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "paths": {
      "components": ["/components/*"],
    }
  },
  "exclude": ["node_modules", "public", ".cache"],
  "include": ["./src/**/*"],
}